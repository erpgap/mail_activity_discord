<!-- views/res_config_settings_views.xml -->
<odoo>
    <record id="res_config_settings_view_form_discord" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.discord</field>
        <field name="model">res.config.settings</field>
        <field name="arch" type="xml">
            <form string="Settings">
                <block title="Discord Bot Settings" name="users_discord_setting_container">
                    <group string="Discord Bot Settings">
                        <field name="discord_bot_token" placeholder="Enter Discord Bot Token"/>
                        <field name="discord_channel_id" placeholder="Enter Discord Channel ID"/>
                    </group>
                </block>
            </form>
        </field>
    </record>
</odoo>
