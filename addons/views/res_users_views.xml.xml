<?xml version="1.0"?>
<odoo>
    <record id="view_users_form" model="ir.ui.view">
        <field name="name">res.users.form</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='preferences']/label[@for='lang']" position="before">
                <field name="discord_handler" placeholder="Insert your Discord User Handler"/>
            </xpath>
        </field>
    </record>

    <record id="view_users_form_simple_modif" model="ir.ui.view">
        <field name="name">res.users.preferences.form</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form_simple_modif"/>
        <field eval="18" name="priority"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='preferences_page']//label[@for='lang']" position="before">
                <field name="discord_handler" placeholder="Insert your Discord User Handler"/>
            </xpath>
        </field>
    </record>
</odoo>