<odoo>
    <record id="res_config_settings_view_form_discord" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.discord</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@name='integration']" position="inside">
                <setting string="Discord Connector Settings" id="user_discord_settings">
                    <div class="content-group" id="discord_configuration_settings">
                        <div class="mt16 row">
                            <group>
                            <!-- <label for="discord_bot_token" class="col-3 o_light_label">Discord Bot Token</label> -->
                            <field name="discord_bot_token" placeholder="Enter Discord Bot Token" class="oe_inline"/>
                            </group>
                        </div>
                        <div class="mt16 row">
                            <group>
                            <!-- <label for="discord_channel_id" class="col-3 o_light_label">Discord Channel ID</label> -->
                            <field name="discord_channel_id" placeholder="Enter Discord Channel ID" class="oe_inline"/>
                            </group>
                        </div>
                    </div>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>